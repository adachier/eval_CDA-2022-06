{% extends 'base.html.twig' %}

{% block title %}Computer index{% endblock %}

{% block body %}

    <div class="container mt-5">
        <h1 class="text-center">Liste des Annonces d'ordinateurs</h1>

        <table class="table mt-5">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Model</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Release_year</th>
                    <th>Reference</th>
                    <th>Is_visible</th>
                    <th>Image</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for computer in computers %}
                <tr>
                    <td>{{ computer.id }}</td>
                    <td>{{ computer.model }}</td>
                    <td>{{ computer.description }}</td>
                    <td>{{ computer.price }}</td>
                    <td>{{ computer.releaseYear }}</td>
                    <td>{{ computer.reference }}</td>
                    <td>{{ computer.isVisible ? 'Yes' : 'No' }}</td>
                    <td>{{ computer.image }}</td>
                    <td>
                        <a class="btn btn-primary" href="{{ path('app_computer_show', {'id': computer.id}) }}">show</a>
                        <a class="btn btn-warning" href="{{ path('app_computer_edit', {'id': computer.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">Aucune Annonce n'a été créée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="text-center">
            <a class="btn btn-success" href="{{ path('app_computer_new') }}">Créer une nouvelle annonce</a>
        </div>
    </div>
{% endblock %}
